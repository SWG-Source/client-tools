trigger OnStartNpcConversation (obj_id player)
{
	obj_id npc = self;

	if (ai_lib.isInCombat (npc) || ai_lib.isInCombat (player))
		return SCRIPT_OVERRIDE;

	//-- [NOTE] 
	if (itp_loam_courier_condition_loamTaskActive (player, npc))
	{
		itp_loam_courier_action_loamSignal (player, npc);

		//-- NPC: Inquisitor Loam sent you! No! There was nothing I could do. They came out of nowhere and took the missive. There were too many. Wait, I know. You can go take care of them. Teach them a lesson about messing with an Imperial courier. That's my only hope.
		string_id message = new string_id (c_stringFile, "s_32");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (itp_loam_courier_condition__defaultCondition (player, npc))
	{
		//-- NPC: Huh...what was that? Please go away. He might find me.
		string_id message = new string_id (c_stringFile, "s_34");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	chat.chat (npc, "Error:  All conditions for OnStartNpcConversation were false.");

	return SCRIPT_CONTINUE;
}


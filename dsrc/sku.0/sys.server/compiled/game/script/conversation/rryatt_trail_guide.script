int rryatt_trail_guide_handleBranch1 (obj_id player, obj_id npc, string_id response)
{
	//-- [BRANCH NOTE] 
	//-- NPC: Would you like to move down to the next level or return to The Kachirho Gate?

	//-- [RESPONSE NOTE] 
	//-- PLAYER: Show me the way down to the next level.
	if (response == "s_63")
	{
		//-- [NOTE] 
		if (rryatt_trail_guide_condition__defaultCondition (player, npc))
		{
			rryatt_trail_guide_action_zoneToNextLevel (player, npc);

			//-- NPC: Stay near the path, the Rryatt trail is not for the faint of heart.
			string_id message = new string_id (c_stringFile, "s_65");
			utils.removeScriptVar (player, "conversation.rryatt_trail_guide.branchId");

			npcEndConversationWithMessage (player, message);

			return SCRIPT_CONTINUE;
		}

	}

	//-- [RESPONSE NOTE] 
	//-- PLAYER: Show me the way out to the Gate.
	if (response == "s_67")
	{
		//-- [NOTE] 
		if (rryatt_trail_guide_condition__defaultCondition (player, npc))
		{
			rryatt_trail_guide_action_returnToZoneIn (player, npc);

			//-- NPC: It is probably best.
			string_id message = new string_id (c_stringFile, "s_69");
			utils.removeScriptVar (player, "conversation.rryatt_trail_guide.branchId");

			npcEndConversationWithMessage (player, message);

			return SCRIPT_CONTINUE;
		}

	}

	return SCRIPT_DEFAULT;
}


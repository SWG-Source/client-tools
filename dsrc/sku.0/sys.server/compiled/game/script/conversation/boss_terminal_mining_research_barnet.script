int boss_terminal_mining_research_barnet_handleBranch2 (obj_id player, obj_id npc, string_id response)
{
	//-- [BRANCH NOTE] 
	//-- NPC: Grand Foreman Terminal

	//-- [RESPONSE NOTE] 
	//-- PLAYER: Call the Grand Foreman
	if (response == "s_36")
	{
		//-- [NOTE] 
		if (boss_terminal_mining_research_barnet_condition__defaultCondition (player, npc))
		{
			boss_terminal_mining_research_barnet_action_startEvent (player, npc);

			//-- NPC: Command accepted.
			string_id message = new string_id (c_stringFile, "s_37");
			utils.removeScriptVar (player, "conversation.boss_terminal_mining_research_barnet.branchId");

			npcEndConversationWithMessage (player, message);

			return SCRIPT_CONTINUE;
		}

	}

	return SCRIPT_DEFAULT;
}


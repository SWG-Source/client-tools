				if (hasResponse2)
					responses [responseIndex++] = new string_id (c_stringFile, "s_46");

				if (hasResponse3)
					responses [responseIndex++] = new string_id (c_stringFile, "s_63");

				if (hasResponse4)
					responses [responseIndex++] = new string_id (c_stringFile, "s_64");

				if (hasResponse5)

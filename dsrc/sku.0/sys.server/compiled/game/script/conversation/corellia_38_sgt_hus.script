		string_id message = new string_id (c_stringFile, "s_49");
		chat.chat (npc, player, message);

		return SCRIPT_CONTINUE;
	}

	//-- [NOTE] 
	if (corellia_38_sgt_hus_condition__defaultCondition (player, npc))
	{
		//-- NPC: Quiet. I'm staking out these thugs. I have to figure out a way to get the goods they've stolen back to their rightful owners. Hey, maybe you can help. Would you go into that camp and recover the stolen goods for me?
		string_id message = new string_id (c_stringFile, "s_43");
		int numberOfResponses = 0;

		boolean hasResponse = false;

		//-- PLAYER: I'll be glad to help.
		boolean hasResponse0 = false;
		if (corellia_38_sgt_hus_condition__defaultCondition (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse0 = true;
		}

		//-- PLAYER: No, I don't think so.
		boolean hasResponse1 = false;
		if (corellia_38_sgt_hus_condition__defaultCondition (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse1 = true;
		}

		if (hasResponse)
		{
			int responseIndex = 0;
			string_id responses [] = new string_id [numberOfResponses];

			if (hasResponse0)
				responses [responseIndex++] = new string_id (c_stringFile, "s_44");

			if (hasResponse1)
				responses [responseIndex++] = new string_id (c_stringFile, "s_45");

			utils.setScriptVar (player, "conversation.corellia_38_sgt_hus.branchId", 3);

			npcStartConversation (player, npc, "corellia_38_sgt_hus", message, responses);
		}
		else
		{
			chat.chat (npc, player, message);
		}

		return SCRIPT_CONTINUE;
	}

	chat.chat (npc, "Error:  All conditions for OnStartNpcConversation were false.");

	return SCRIPT_CONTINUE;
}


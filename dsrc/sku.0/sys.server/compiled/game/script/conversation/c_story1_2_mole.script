trigger OnStartNpcConversation (obj_id player)
{
	obj_id npc = self;

	if (ai_lib.isInCombat (npc) || ai_lib.isInCombat (player))
		return SCRIPT_OVERRIDE;

	//-- [NOTE] 
	if (c_story1_2_mole_condition__defaultCondition (player, npc))
	{
		c_story1_2_mole_action_facePlayer (player, npc);

		//-- NPC: Why hello there! Is there something that I can do for you?
		string_id message = new string_id (c_stringFile, "s_53");
		int numberOfResponses = 0;

		boolean hasResponse = false;

		//-- PLAYER: You can tell me about that pilot you saw.
		boolean hasResponse0 = false;
		if (c_story1_2_mole_condition_atKailaStep (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse0 = true;
		}

		//-- PLAYER: I just wanted to say 'hello' to a lovely lady.
		boolean hasResponse1 = false;
		if (c_story1_2_mole_condition__defaultCondition (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse1 = true;
		}

		//-- PLAYER: Nothing.  I thought you were someone else.
		boolean hasResponse2 = false;
		if (c_story1_2_mole_condition__defaultCondition (player, npc))
		{
			++numberOfResponses;
			hasResponse = true;
			hasResponse2 = true;
		}

		if (hasResponse)
		{
			int responseIndex = 0;
			string_id responses [] = new string_id [numberOfResponses];

			if (hasResponse0)
				responses [responseIndex++] = new string_id (c_stringFile, "s_55");

			if (hasResponse1)
				responses [responseIndex++] = new string_id (c_stringFile, "s_59");

			if (hasResponse2)
				responses [responseIndex++] = new string_id (c_stringFile, "s_63");

			utils.setScriptVar (player, "conversation.c_story1_2_mole.branchId", 1);

			npcStartConversation (player, npc, "c_story1_2_mole", message, responses);
		}
		else
		{
			chat.chat (npc, player, message);
		}

		return SCRIPT_CONTINUE;
	}

	chat.chat (npc, "Error:  All conditions for OnStartNpcConversation were false.");

	return SCRIPT_CONTINUE;
}


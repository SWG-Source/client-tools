int c_story1_2_mole_handleBranch1 (obj_id player, obj_id npc, string_id response)
{
	//-- [BRANCH NOTE] 
	//-- NPC: Why hello there! Is there something that I can do for you?

	//-- [RESPONSE NOTE] 
	//-- PLAYER: You can tell me about that pilot you saw.
	if (response == "s_55")
	{
		//-- [NOTE] 
		if (c_story1_2_mole_condition__defaultCondition (player, npc))
		{
			c_story1_2_mole_action_forwardQuest (player, npc);

			//-- NPC: Ah, I know who you are now.  I'm glad you came to see me.  I was beginning to wonder if you would.  Listen carefully, head directly northeast.  It's north of some ruins and west of a statue head. Here are coordinates if you prefer that.
			string_id message = new string_id (c_stringFile, "s_57");
			utils.removeScriptVar (player, "conversation.c_story1_2_mole.branchId");

			chat.chat (npc, player, message);
			npcEndConversation (player);

			return SCRIPT_CONTINUE;
		}

	}

	//-- [RESPONSE NOTE] 
	//-- PLAYER: I just wanted to say 'hello' to a lovely lady.
	if (response == "s_59")
	{
		//-- [NOTE] 
		if (c_story1_2_mole_condition__defaultCondition (player, npc))
		{
			doAnimationAction (npc, "hair_flip");

			//-- NPC: You are very sweet, but I'm waiting for someone.
			string_id message = new string_id (c_stringFile, "s_61");
			utils.removeScriptVar (player, "conversation.c_story1_2_mole.branchId");

			chat.chat (npc, player, message);
			npcEndConversation (player);

			return SCRIPT_CONTINUE;
		}

	}

	//-- [RESPONSE NOTE] 
	//-- PLAYER: Nothing.  I thought you were someone else.
	if (response == "s_63")
	{
		doAnimationAction (player, "shake_head_no");

		//-- [NOTE] 
		if (c_story1_2_mole_condition__defaultCondition (player, npc))
		{
			doAnimationAction (npc, "stretch");

			//-- NPC: All right.  We all make mistakes.
			string_id message = new string_id (c_stringFile, "s_65");
			utils.removeScriptVar (player, "conversation.c_story1_2_mole.branchId");

			chat.chat (npc, player, message);
			npcEndConversation (player);

			return SCRIPT_CONTINUE;
		}

	}

	return SCRIPT_DEFAULT;
}

